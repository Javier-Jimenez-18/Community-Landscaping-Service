<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Students Currently Registered</h1>
  <table>
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.full_name %></td>
          <td><%= student.phone %></td>
          <td><%= student.email %></td>
          <td><%= link_to 'Show', student, :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_student_path(student), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Student Registration', new_student_path, :class => "btn btn-primary btn-sm" %> |
  <%= link_to 'Landscaping Services', landscaping_services_path, :class => "btn btn-primary btn-sm" %>
  <br>
  <br>
  <%= link_to 'Edit User Account', edit_user_registration_path, :class => "btn btn-primary btn-sm" %> |
  <%= link_to 'Home', home_index_path, :class => "btn btn-primary btn-sm" %>
  <br>
</div>
