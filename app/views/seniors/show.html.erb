<p id="notice"><%= notice %></p>

<div class="container">
  <br>
  <br>
  <br>
  <p>
    <strong>First Name:</strong>
    <%= @senior.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= @senior.last_name %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @senior.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @senior.email %>
  </p>

  <%= link_to 'Edit', edit_senior_path(@senior), :class => "btn btn-primary btn-sm" %> |
  <%= link_to 'Back', seniors_path, :class => "btn btn-primary btn-sm" %>
</div>

<%# if a senior has landscaping services, a list of them are shown in a table at the bottom,
    with show/update/delete links. %>
<br>
<br>
<div class="container">
  <h1>Landscaping Services</h1>

  <table>
    <thead>
      <tr>
        <th>Landscape Service:</th>
        <th>Fee per Hour:</th>
        <th>Date and Time:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @senior.landscaping_services.each do |landscaping_service| %>
        <tr>
          <td><%= landscaping_service.landscape_service %></td>
          <td><%= landscaping_service.fee_per_hour %></td>
          <td><%= landscaping_service.date_time %></td>
          <td><%= link_to 'Show', landscaping_service, :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Update', edit_landscaping_service_path(landscaping_service), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Delete', landscaping_service, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
